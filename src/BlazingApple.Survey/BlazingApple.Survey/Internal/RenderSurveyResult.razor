@if (Responses != null)
{
	<div class="row">
		<div class="col-md-12">
			<div class="text-center customColors">@Label</div>
			<RadzenChart>
				<RadzenDonutSeries Data="@Responses"
									CategoryProperty="OptionLabel"
									ValueProperty="Responses">
					<Radzen.Blazor.RadzenLegend Position="LegendPosition.Bottom"></Radzen.Blazor.RadzenLegend>
				</RadzenDonutSeries>
			</RadzenChart>
		</div>
	</div>
}

@code {

	[Parameter]
	public List<AnswerResponse> Responses { get; set; }

	[Parameter]
	public string Label { get; set; }

}
