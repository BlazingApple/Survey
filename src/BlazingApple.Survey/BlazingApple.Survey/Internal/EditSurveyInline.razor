
<div class="d-flex" style="flex-direction: column;">
	<div class="d-flex" style="justify-content:flex-end;">
		<RadzenButton Icon="close"
					  Click="OnButtonClick" ButtonStyle="ButtonStyle.Light"></RadzenButton>
	</div>
	<EditSurvey SelectedSurvey="SelectedSurvey" OnClose="OnSurveyEditClosed"></EditSurvey>
</div>

@code {
	[Parameter]
	public bool Value { get; set; }

	[Parameter]
	public EventCallback<bool> ValueChanged { get; set; }

	[Parameter]
	public Survey SelectedSurvey { get; set; }

	public bool BoundValue
	{
		get => Value;
		set
		{
			ValueChanged.InvokeAsync(value);
		}
	}

	private void OnSurveyEditClosed(object sender, EventArgs args)
	{
		BoundValue = false;
	}
	private void OnButtonClick()
	{
		BoundValue = !BoundValue;
	}
}
