@using BlazingApple.Survey.Components.Services;

@if (SelectedSurvey != null)
{
	<RadzenDataList Count="@_numberOfQuestions"
					Data="@_surveyResultSet"
					LoadData="@LoadSurveyResultsData"
					PageSize="1" WrapItems="true" AllowPaging="true"
					TItem="DTOQuestion">
		<Template Context="item">
			<RenderSurveyResult Label="@item.Prompt" Responses="@item.AnswerResponses"></RenderSurveyResult>
		</Template>
	</RadzenDataList>
}
