@if (Responses != null)
{
	<div class="row">
		<div class="col-md-12">
			<div class="text-center">@Label</div>
			<div class="customColors">
				<RadzenChart>
					<RadzenDonutSeries Data="@ResponseDisplays"
									   CategoryProperty="OptionLabel"
									   ValueProperty="Responses"
					>
						<Radzen.Blazor.RadzenLegend Position="LegendPosition.Right" />
					</RadzenDonutSeries>
				</RadzenChart>
			</div>
		</div>
	</div>
}
